<div class="header-search hiddenM">
    {% include "partial/search.twig" %}
</div>
<h1 class="header-logo no-margin" role="banner">
    <a class="header-logo__link" href="{{site.url}}" rel="home"><img src="{{ theme.path }}/assets/img/logo.svg" alt="logo"></a>
</h1>
<div class="header-menu text-small light-pink uppercase">
    <a class="light-pink" href="">The lab</a>
    <div class="header-menu__sep light-grey">:</div>
    <div class="header-menu__trigger">
        <span class="hiddenM">Menu</span>
        <img src="{{ theme.path }}/assets/img/hamburger.svg" alt="trigger">
    </div>

</div>
<div class="slide-menu bg-black">
    <div class="slide-menu__close">
        <img src="{{theme.path}}/assets/img/close.svg" alt="close">
    </div>
    <div class="header-search">
        {% include "partial/search.twig" %}
    </div>

    <nav class="slide-menu__nav" id="nav-main" role="navigation">
        {% include "menu.twig" with {'menu': menu.get_items} %}
    </nav>
    <div class="slide-menu__social">
        {% include "partial/social.twig" %}
    </div>
</div>
<!-- #nav -->
