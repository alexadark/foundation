{% extends "tease.twig" %}
{% block content %}


    <div class="tease-post__media">
        <a href="{{ post.link }}">
            {% include "partial/badge.twig" %}
            {% set imgSrc = post.thumbnail.src %}
            {% if imgSrc %}
                <img src="{{imgSrc | resize(500, 312)}}"/>
            {% else %}
                <img src="{{theme.path}}/assets/img/default.png"/>

            {% endif %}

        </a>
        {% if post.post_video %}
            {% include "partial/video-duration.twig" %}
        {% endif %}
    </div>

    <div class="tease-post__content">
        {% set cats = post.categories %}
        <div class="tease-post__content--top">
            <div class="tease-post__cats">
                {% for cat in cats %}
                    <h4 class="tease-post__cat bold uppercase no-margin">
                        <a href="/category/{{ cat.slug }}">{{ cat.name  | e('esc_html')}}</a>
                    </h4>
                {% endfor %}
            </div>

            <h3 class="tease-post__title font32 bold no-margin">
                <a href="{{ post.link }}">{{ post.title }}</a>
            </h3>
        </div>
        <div class="tease-post__content--bottom">
            {% include "partial/read-more.twig" %}
            {% if fn('is_home') or fn('is_author') %}
                {% include "partial/post-meta.twig" %}
            {% endif %}

        </div>
    </div>

{% endblock %}
