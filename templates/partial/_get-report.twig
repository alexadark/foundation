<div class="report">
    <h2 class="report__title font42 light text-center no-margin">
        Get the report
    </h2>
    {% if fn('is_user_logged_in') %}
        <div class="report__subtitle bold light font21  text-center">
            {{ options.report_subtext | e('esc_html')}}
        </div>
        <div class="report__button text-center">
            <a href="{{ TimberImage(post.resource_download) | e('esc_url')}}" class="button button--green" download>Download now
                <img src="{{ theme.path }}/assets/img/dl-green.svg" alt=""/></a>
        </div>

    {% else %}
        {% set ID = post.download_id | e('esc_html') %}
        {{ fn('do_shortcode','[dlm_gf_form download_id='~ ID ~']') }}
    {% endif %}
</div>
