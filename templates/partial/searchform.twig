{% set placeholder = fn('is_search')? fn('the_search_query'): fn('is_404') ?
'What are you looking for?': "" %}
<form
	role="search"
	method="get"
	id="searchform"
	class="searchform"
	action="{{ site.link }}"
>
	<div>
		<label class="screen-reader-text" for="s">Search for:</label>
		<input
			type="text"
			value="{{ function('get_search_query') }}"
			name="s"
			placeholder="{{ placeholder }}"
			id="s"
		/>
		{% if fn('is_search') or fn('is_404') %}
		<input class="button button--salmon" type="submit" value="search" />

		{% endif %}
	</div>
</form>
