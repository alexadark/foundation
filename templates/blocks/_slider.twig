        <div class="wrap700">
            <div class="slider">
                {% for slide in block.slides %}
                    <div class="slide" style="background:url({{ TimberImage(slide.image) | e('esc_url')}}) no-repeat center center/cover; height: 405px"></div>

                {% endfor %}
            </div>

        </div>

    </div>
{% endblock %}
