{% extends "blocks/_block-base.twig" %}
{% block contentBlock %}
    <div class="booking-form bg-black {{ class }}">
        <div class="wrapper">
            <div class="booking-form__text">
                {% for item in block.left_content %}
                    <h3 class="booking-form__title font32 bold light-pink">{{ item.title | e('esc_html')}}</h3>
                    <div class="booking-form__content">{{ item.content | e('esc_html')}}</div>
                {% endfor %}


            </div>
            <div class="booking-form__form">
                {{ fn('do_shortcode','[gravityform id=1 title=false description=false ajax=true]') }}
            </div>


        </div>
    </div>

{% endblock %}
