<div class="select-plan bg-black">
    <div class="wrapper">
        {% for item in block.plans %}
            <div class="select-plan__item">
                <div class="select-plan__header bold uppercase" style="background: url({{ TimberImage(item.background) | e('esc_url')}}) no-repeat left top/cover">{{ item.title | e('esc_html')}}</div>
                <div class="select-plan__body">
                    <div class="select-plan__content">
                        {{ item.content | e('wp_kses_post')}}
                    </div>
                    
                    {% if email_address != '' %}
                    {% set plan_link = item.link ~  '&email_address='~email_address %}
                    {% endif %}

                    {% if first_name != '' %}
                    {% set plan_link = plan_link ~  '&first_name='~first_name %}
                    {% endif %}

                    {% if last_name != '' %}
                    {% set plan_link = plan_link ~  '&last_name='~last_name %}
                    {% endif %}
                    <a href="{{ plan_link | e('esc_url')}}" class="button button--blue">Select Plan<img src="{{ theme.path }}/assets/img/star-icon.svg" alt=""/></a>
                </div>
            </div>

        {% endfor %}
    </div>
</div>
